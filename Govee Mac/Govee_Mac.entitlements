<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- App Sandbox (required for Mac App Store) -->
	<key>com.apple.security.app-sandbox</key>
	<true/>
	
	<!-- File Access -->
	<key>com.apple.security.files.user-selected.read-only</key>
	<true/>
	
	<!-- Network Access (required for Cloud API, LAN, Home Assistant) -->
	<key>com.apple.security.network.client</key>
	<true/>
	<key>com.apple.security.network.server</key>
	<true/>
	
	<!-- Keychain Access (for secure API key storage) -->
	<key>keychain-access-groups</key>
	<array>
		<string>$(AppIdentifierPrefix)com.govee.mac</string>
	</array>
	
	<!-- HomeKit Access (for controlling HomeKit devices) -->
	<key>com.apple.developer.homekit</key>
	<true/>
</dict>
</plist>
